@using SimpleForum.Web.Resources
@model SimpleForum.Web.Models.Write.TopicModel

<ol class="breadcrumb">
	<li>@Html.ActionLink(ModelResources.Forum, "Index", "Forum")</li>
	<li>@Html.ActionLink(Model.SectionTitle, "Index", "Section", new { id = Model.SectionId }, null)</li>
	<li class="active">@ViewResources.Topic_PostNewTopic</li>
</ol>

<div class="pull-right">
	@{ Html.RenderAction("UserInfo", "Account");}
</div>

<h2>@Model.SectionTitle</h2>
<hr />

<h3>@ViewResources.Topic_PostNewTopic</h3>

@using (Html.BeginForm())
{
	<div class="form-group">
		@Html.LabelFor(m => m.Subject)
		@Html.TextBoxFor(m => m.Subject, new { @class = "form-control" })
		@Html.ValidationMessageFor(m => m.Subject)
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.Text)
		@Html.TextAreaFor(m => m.Text, new { @class = "form-control", rows = 7 })
		@Html.ValidationMessageFor(m => m.Text)
	</div>
	<button type="submit" class="btn btn-primary">@ViewResources.Topic_Submit</button>
}